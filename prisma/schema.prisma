datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Power {
  id          Int       @id @default(autoincrement())
  userId      Int
  fighterId   String    @db.VarChar(3)
  power       Int
  recordedAt  DateTime
}